
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Jeremy's OA </title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <!-- 头部标题样式 -->
    <style>
        .txt {
            font-family: 'Times New Roman', Times, serif;
            font-size: 20px;
            font-weight: bold;
            color: blue;
            margin-left: 10px;
            margin-top: 10px;
            float: left;
        }
    </style>

    <script>
        $(function () {
            bindClickEvent();
        });
        function bindClickEvent() {
            $(".detailLink").click(function () {
                var title = $(this).text();
                var url = $(this).attr("url");
                var isExit = $("#tt").tabs('exists', title);
                //<!-- 判断页签是否已经存在，存在就不再创建 -->
                if (isExit) {
                    $("#tt").tabs('select', title);
                    return;
                }
                $('#tt').tabs('add', {
                    title: title,
                    content: showContent(url),
                    closable: true
                });
            });
        }
        //<!-- 根据url获取内容 -->
        function showContent(url) {
            var str = '<iframe src="' + url + '" frameborder="0" width="100%" height="100%"></iframe>';
            return str;
        }

    </script>

</head>
<body class="easyui-layout">
    <!--上侧-->
    <div data-options="region:'north',border:false"
         style="height:60px;background:#B3DFDA;padding:10px;overflow:hidden;background-image:url('/Content/Images/bg3.png')">
        <img src="/Content/Images/logo.ico" style="float:left" />
        <span class="txt">Jeremy's OA 协同办公平台</span>
        <span style="float:right;margin-top:5px;">
            <a href="javascript:void(0)">欢迎您-admin</a>&nbsp;
            <a href="javascript:void(0)">[注册]</a>&nbsp;
            <a href="javascript:void(0)">[退出]</a>&nbsp;&nbsp;&nbsp;&nbsp;
        </span>
    </div>
    <!--左侧-->
    <div data-options="region:'west',split:true,title:'门户管理'" style="width:170px;padding:2px;">
        <div class="easyui-accordion" style="width:auto;height:auto;">
            <div title="用户管理" data-options="iconCls:'icon-ok'" style="overflow:auto;padding:5px;">
                <a href="javascript:void(0)" class="detailLink" url="/UserInfo/Index">用户管理</a>
            </div>
            <div title="权限管理" data-options="iconCls:'icon-search'" style="padding:5px;">
                <a href="javascript:void(0)" class="detailLink" url="/RoleInfo/Index">角色管理</a>
                <br />
                <a href="javascript:void(0)" class="detailLink" url="/ActionInfo/Index">权限管理</a>
            </div>
            <div title="系统设置" data-options="iconCls:'icon-help'" style="padding:5px;">
                <a href="javascript:void(0)" class="detailLink" url="/SysSet/Index">系统设置</a>
            </div>
        </div>
    </div>
    <!--下侧-->
    <div data-options="region:'south',border:false" style="height:30px;background:#A9FACD;padding:2px;display:table-cell; overflow:hidden;background-image:url('/Content/Images/bg.png')">
        <span style="vertical-align:middle;text-align:center;display:block; font-family:'Times New Roman', Times, serif; font-size:5px;font-weight:bold;color:black;">
            Copyright © 2020-2024 Jeremy.Wu All Rights Reserved
        </span>
    </div>
    <!--中间-->
    <div data-options="region:'center',title:'Center'">
        <div id="tt" class="easyui-tabs" style="width:700px;height:250px" fit="true">
            <div title="用户管理" style="padding:10px">
                <iframe src="/UserInfo/Index" frameborder="0" width="100%" height="100%" style="margin:0px"></iframe>
            </div>

        </div>
    </div>
</body>
</html>
